platform :ios, '13.0'

target 'STExample' do
    pod 'ShareTripSDK', :path => '../'
    
    pod 'Alamofire', '5.5'
    pod 'Kingfisher', '~> 7.6.2'
    pod 'PKHUD', '~> 5.0'
    pod 'IQKeyboardManagerSwift'
    pod 'FloatingPanel'
    pod 'lottie-ios', '3.5.0'
    pod 'SwiftyJSON', '~> 4.0'
    pod "JWT"
    pod 'JTAppleCalendar', '~> 8.0'
    pod 'FBSDKCoreKit', '~> 16.1.0'
    pod 'Socket.IO-Client-Swift', '~> 15.2.0'
    pod 'FBSDKLoginKit', '~> 16.1.0'
    pod 'GoogleSignIn', '~> 8.0.0'
    pod 'FirebaseCore', '11.3.0'
    pod 'FirebaseAnalytics', '~> 11.3.0'
    pod 'FirebaseCrashlytics', '~> 11.3.0'
    pod 'FirebaseAuth', '~> 11.3.0'
    pod 'FirebaseRemoteConfig', '~> 11.3.0'
    pod 'FirebaseMessaging', '~> 11.3.0'
    pod 'FirebaseDynamicLinks', '~> 11.3.0'
    pod 'SwiftKeychainWrapper'
    pod 'XLPagerTabStrip' # new
    pod 'MBProgressHUD', '1.2.0' # new
    pod 'PanModal', :git => 'https://github.com/sharetripnet/PanModal.git' # new
    pod 'ActiveLabel' # new
    pod 'SkeletonView' # new
    pod 'MHLoadingButton' # new
    pod 'SwiftEntryKit', :git => 'https://github.com/sharetripnet/SwiftEntryKit.git', :tag => '2.0.8' # new
    pod 'CRRefresh' # new
end

use_frameworks!

post_install do |installer|
  installer.pods_project.targets.each do |target|
    
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES' # do not remove
    end
    
    if target.name == 'BoringSSL-GRPC'
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS'].split
          flags.reject! { |flag| flag == '-GCC_WARN_INHIBIT_ALL_WARNINGS' }
          file.settings['COMPILER_FLAGS'] = flags.join(' ')
        end
      end
    end
    
  end
end
